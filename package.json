{
  "name": "irl-reporting-site",
  "version": "0.1.0",
  "license": "Requires written authorization from William R.A.D. Funk",
  "scripts": {
    "watch:lint": "node_modules/.bin/watch-run --stop-on-error -i -p \"**/*.scss\" \"npm run lint:style\"",
    "start:lint": "node_modules/.bin/concurrently --kill-others-on-fail \"npm run watch:lint\" \"npm start\"",
    "ng": "ng",
    "build": "run-s build:ng copy:configs",
    "build:ng": "ng build --prod --base-href=/applications/sense-the-irl/",
    "server": "ng serve",
    "ng-test": "ng test --code-coverage",
    "test:single": "ng test --code-coverage --watch=false",
    "test:watch": "run-p ng-test",
    "test": "run-s clean:coverage test:single",
    "e2e": "ng e2e",
    "typedoc": "typedoc --theme markdown --mdFlavour bitbucket --mode file --target ES6 --readme none --out docs src/",
    "readme": "run-s clean:docs typedoc",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist",
    "clean:docs": "rimraf docs",
    "clean:coverage": "rimraf coverage",
    "copy:configs": "cpx src/assets/configs/.htaccess dist/",
    "lint": "run-p lint:*",
    "lint:style": "stylelint src/**/*.scss --config .stylelintrc.json",
    "lint:ng": "ng lint",
    "start": "npm-run-all clean:dist server",
    "all": "npm-run-all --aggregate-output clean --parallel lint --parallel test:single typedoc --parallel build:ng typedoc"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.9",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "@ng-bootstrap/ng-bootstrap": "^1.0.2",
    "@types/leaflet": "^1.2.12",
    "bootstrap": "^4.0.0",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "leaflet": "^1.3.4",
    "leaflet.awesome-markers": "^2.0.4",
    "leaflet.markercluster": "^1.4.1",
    "rxjs": "^5.5.6",
    "tether": "^1.4.3",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular-devkit/core": "^0.4.6",
    "@angular/cli": "~1.7.3",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "concurrently": "^3.5.1",
    "cpx": "^1.5.0",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-junit-reporter": "^1.2.0",
    "npm-run-all": "^4.1.2",
    "protractor": "~5.1.2",
    "rimraf": "^2.6.2",
    "stylelint": "^9.1.3",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^2.5.0",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typedoc": "^0.11.1",
    "typedoc-plugin-markdown": "^1.0.14",
    "typescript": "~2.5.3",
    "watch-run": "^1.2.5"
  }
}
